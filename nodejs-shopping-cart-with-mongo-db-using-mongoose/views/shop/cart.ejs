    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if(cart && cart.length > 0) {%>
        <% for (product of cart) { %>
            <h1><%= product.productId.title %>(<%= product.quantity %>)</h1>
            <form action="/cart-delete-product" method="POST">
                <input type="hidden" name="prodId" value="<%= product.productId._id %>">
                <input type="hidden" name="prodPrice" value="<%= product.productId.price %>">
                <button type="submit" class="btn">Delete</button>
            </form>
            
        <% } %>
            
            <br>
            <hr>
            <br>
            <form method="post" action="/create-order">
                <button class="btn" type="submit">Buy now</button>
            </form>
        
        <% } else { %>
            <h1>There are no products in your cart</h1>
        <% } %>
        <%- include('../includes/end.ejs') %>