<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if(cart && cart.length > 0) {%>
        <% for (product of cart) { %>
            <h1><%= product.productData.title %>(<%= product.qty %>)</h1>
            <form action="/cart-delete-product" method="POST">
                <input type="hidden" name="prodId" value="<%= product.productData.id %>">
                <input type="hidden" name="prodPrice" value="<%= product.productData.price %>">
                <button type="submit" class="btn">Delete</button>
            </form>
        <% } } else { %>
            <h1>There are no products in your cart</h1>
        <% } %>
        <%- include('../includes/end.ejs') %>